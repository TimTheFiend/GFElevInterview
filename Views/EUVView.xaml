<UserControl x:Class="GFElevInterview.Views.EUVView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GFElevInterview.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1600" d:DesignWidth="800" Background="White">
    <!--Default Height "450" Width "800"-->
    <Grid>
        <StackPanel>
            <Label Content="Interview guide til Visitations elever"  FontSize="20" FontWeight="Bold" FontStyle="Italic" Margin="10"/>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" x:Name="educationArea">
                <StackPanel Margin="10">
                    <Label  Content="Hvilken uddannelse ønske du at påbegynde?" FontSize="20" />
                    <ComboBox x:Name="educationComboBox"/>
                </StackPanel>
            </Border>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" x:Name="EUV1Area" Height="1400">
                <StackPanel Margin="10">
                    <Label  Content="Har du 2 års relevant erhverserfarings, inde for de sidste 5?" FontSize="20"/>
                    <DockPanel>
                        <RadioButton x:Name="EUV1JA" Margin="0,0,60,0" Content="JA">
                            <RadioButton.RenderTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </RadioButton.RenderTransform>
                        </RadioButton>
                        <RadioButton x:Name="EUV2NEJ" Content="Nej">
                            <RadioButton.RenderTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </RadioButton.RenderTransform>
                        </RadioButton>
                    </DockPanel>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" x:Name="EUV1Area1" Height="350">
                        <StackPanel>
                            <Label  Content="Har du reglmæssigt udført følgende opgaver: " FontSize="20" Margin="0,10,0,0"/>
                            <!--med tilhørende-->
                            <Label Content="A. Dimensionering, installationm konfiguration, sikkerhedshåndtering og opgradering af computere med" FontSize="14.5" Height="34"/>
                            <Label Content="tilhørende hardware og software, operativsystemer og serveroperativsystemer, administration og af" FontSize="14.5" Height="34"/>
                            <Label Content="netværksservere, trådløse netværk og serverløsninger som fx databaseserver." FontSize="14.5" Height="34"  Margin="0,0,0,12"/>
                            <Label Content="B. Fejlfinding til modulniveau på computere og på netværk i forbindelse med opbygning og" FontSize="14.5" Height="34"/>
                            <Label Content="vedligeholdelse af lokalnet." FontSize="14.5" Height="34" Margin="0,0,0,12"/>
                            <Label Content="C. Installation, opsætning og konfiguration af forskellige former for backup på servere, netværksenheder" FontSize="14.5" Height="34"/>
                            <Label Content="som fx Routere, Switche mv. samt WAN-netværk med tilhørende adgangstyper" FontSize="14.5" Height="34"/>
                            <Label Content="og sikkerhedsopsætninger." FontSize="14.5" Height="34"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" x:Name="EUV1Area2" Height="150">
                        <StackPanel>
                            <Label  Content="Herudover skal du i en vis udstrækning havde udført følgende opgaver: " FontSize="20" Margin="0,10,0,0"/>
                            <!--med tilhørende-->
                            <Label Content="A. Udvikling af scripts og mindre programmer under anvendelse af et scriptsprog" FontSize="14.5" Height="34"/>
                            <Label Content="B. Design og opbygning af lokalnet med ekstern opkobling" FontSize="14.5" Height="34"/>
                            <Label Content="C. Kundeservice" FontSize="14.5" Height="34"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" x:Name="EUV1Area3" Height="190">
                        <StackPanel>
                            <Label  Content="Specialet datatekniker med speciale i infrastruktur:" FontSize="20" Margin="0,10,0,0"/>
                            <Label Content="Du skal inde for perioden på 2 år havde arbejdet med ovennævnte generelle opgaver og have et års erfaring med at:" FontSize="14.5" Height="34"/>
                            <Label Content="A. Opbygge, konfigurere, vedligeholde og administrere server- og netværksløsninger samt designe" FontSize="14.5" Height="34"/>
                            <Label Content="avancerede LAN- og WAN-netværk." FontSize="14.5" Height="34"/>
                            <Label Content="B. Analysere, designe, implementere og administrere sikkerhedsløsninger på serverbaserede netværk." FontSize="14.5" Height="34"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" x:Name="EUV1Area4" Height="220">
                        <StackPanel>
                            <Label  Content="Analysere, designe, implementere og administrere sikkerhedsløsninger" FontSize="20" Margin="0,10,0,0"/>
                            <Label  Content="på serverbaserede netværk. Du skal inden for perioden på to år have arbejdet" FontSize="20"/>
                            <Label  Content="med ovennævnte generelle opgaver og have et års erfaring med:" FontSize="20"/>
                            <Label Content="A. Udvikling af programmer, herunder avanceret programudvikling af it-systemer som standalone applikationer," FontSize="14.5" Height="34"/>
                            <Label Content="client-server applikationer, web applikationer m.v." FontSize="14.5" Height="34"/>
                            <Label Content="B.Udviklingsopgaver inden for embeddede systemer og databasesystemer." FontSize="14.5" Height="34"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" x:Name="EUVDokumentation" Height="220">
                        <StackPanel>
                            <Label  Content="Hvis eleven kan dokumentere ovennævnt spørgsmål vil resultater være følgende:" FontSize="20" Margin="0,10,0,0"/>
                            <Label  Content="Alle 3 retninger skal havde svaret ja til: Har du 2 års relevant erhvervserfaring," FontSize="20"/>
                            <Label  Content="inde for de sidste 5 år?" FontSize="20"/>
                            <Label Content="A. Udvikling af programmer, herunder avanceret programudvikling af it-systemer som standalone applikationer," FontSize="14.5" Height="34"/>
                            <Label Content="client-server applikationer, web applikationer m.v." FontSize="14.5" Height="34"/>
                            <Label Content="B.Udviklingsopgaver inden for embeddede systemer og databasesystemer." FontSize="14.5" Height="34"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
             
