<Window x:Class="GFElevInterview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GFElevInterview"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource bdrMain}" Width="250" HorizontalAlignment="Center" BorderThickness="3" >
            <StackPanel >
                <Separator Height="20" Background="Transparent" Margin="0"/>
                <Button Style="{StaticResource btnPanel}" Name="btnUnderviser" Click="btnUnderviser_Click" Width="230">Underviser</Button>
                <Separator Height="40" Background="Transparent" Padding="0" Margin="0"/>
                <Button Style="{StaticResource btnPanel}" Name="btnLeder" Click="btnLeder_Click" Width="230" >Leder</Button>
                <Separator Height="40" Background="Transparent" Padding="0" Margin="0"/>
                <Button Style="{StaticResource btnPanel}" Name="btnVejled" Click="btnVejled_Click" Width="230">Vejledning</Button>
                <Separator Height="40" Background="Transparent" Padding="0" Margin="0"/>
                <Border BorderBrush="Gray" BorderThickness="1" Width="230">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Text="Lyngby: " FontSize="20"/>
                            <TextBlock x:Name="LyngbyTXT" FontSize="20"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Fredriksberg: " FontSize="20"/>
                            <TextBlock x:Name="FredriksbergTXT" FontSize="20"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Ballerup: " FontSize="20"/>
                            <TextBlock x:Name="BallerupTXT" FontSize="20"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                <Separator Height="140" Background="Transparent" Padding="0" Margin="0"/>
                <Image Height="150" Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Source="Resources/TECLOGO.png" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource bdrMain}" Name="HomePanel" HorizontalAlignment="Stretch" BorderThickness="4" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Stretch" Background="WhiteSmoke" RenderTransformOrigin="0.38,0.595"  >
                <Label FontSize="54" FontWeight="Heavy" HorizontalAlignment="Center" FontFamily="Times New Roman" >Velkommen til TEC App</Label>
                <fa:ImageAwesome Icon="Spinner"  SpinDuration="50" Spin="true" Width="191"  Height="196"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Name="UnderviserPanel" Visibility="Visible">
            <ContentControl x:Name="mainContent" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            </ContentControl>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource bdrMain}" Name="LederPanel" HorizontalAlignment="Stretch" BorderThickness="4" Visibility="Collapsed">

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--<TextBlock Grid.Column="0" Grid.Row="0" Text="Password :" FontSize="30" Height="64"  Grid.ColumnSpan="2"   />-->
                <!--<PasswordBox  PasswordChar="*" x:Name="passwordText" KeyDown="passwordText_KeyDown"  FontSize="40"  Grid.Column="1" Grid.Row="1" Height="64" Width="300" Background="#eee" Margin="10" />-->
                <!--<Button x:Name="signinButton"  Background="Gray" Content="Sign In" Margin="10" FontSize="30" Foreground="White" Click="signinButton_Click"   Grid.Column="1"  Grid.Row="2"   Height="64" Width="300"    />-->
            </Grid>
        </Border>
    </Grid>
</Window>
